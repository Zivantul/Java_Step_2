public class Main {

    public static String curExcept;
    public static int sumArr = 0;

    public static void main(String[] args) {
	    // массив для примера
        String arr[][] = new String[4][4];
	      arr[0][0]= "1";
        arr[0][1]= "2";
        arr[0][2]= "3";
        arr[0][3]= "2";

	      arr[1][0]= "0";
        arr[1][1]= "2";
        arr[1][2]= "1";
        arr[1][3]= "0";

	      arr[2][0]= "0";
        arr[2][1]= "vb";
        arr[2][2]= "1";
        arr[2][3]= "3";

	      arr[3][0]= "4";
        arr[3][1]= "4";
        arr[3][2]= "4";
        arr[3][3]= "4";


	try {
            doArray(arr);
        } catch (MyArraySizeException e) {
            System.out.println("Массив не соответствует требуемому размеру!");
        } catch (MyArrayDataException e) {
            System.out.println("Ошибка перевода в число в ячейке: " + curExcept);
        } finally {  // всегда возвращаем сумму значений
            System.out.println("Результат сложения элементов матрицы:" + sumArr);
    }

    }

    /**
     * метод проверяет размер матрицы, перерводит значения в числа и суммирует значения.
     * При необходимости, возвращает Exception. Но в любом случае, возвращает сумму значений (посчитанную до exception)
     * @param arr - передаем в обработку массив (4х4)
     * @return - возвращает сумму значений
     * @throws MyArraySizeException - ошибка размера переданной матрицы
     * @throws MyArrayDataException - ошибка перевода в число (значение в матрице - не числовое)
     */
    public static int doArray (String arr[][]) throws MyArraySizeException, MyArrayDataException {
        // проверяем размер матрицы
        if (arr.length != 4 || arr[3].length != 4) {
            throw new MyArraySizeException();
        }

        // переводим значения в int и суммируем
        int curElement;

        for (int i = 0; i < arr.length; i++) {
            for (int j = 0; j < arr[3].length; j++) {
                    try {
                        curElement = Integer.parseInt(arr[i][j]);
                    } catch (NumberFormatException e) {
                        curExcept = "[" + i + "][" + j + "]";
                        throw new MyArrayDataException();
                    }
                    sumArr += curElement;
                }
            }
        return sumArr;
    }

}
