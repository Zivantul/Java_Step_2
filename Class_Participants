public class Participants {
    public String name;
    public int age;
    public String sex;
    public boolean sportyStatus;

    private final static int DEFAULT_FULL_POWER = 100; // общее количество энергии по умолчанию - для участника

    public Participants(String name, int age, String sex, boolean sportyStatus) {
        this.name = name;
        this.age = age;
        this.sex = sex;
        this.sportyStatus = sportyStatus;
    }


    @Override
    public String toString() {
        return "name='" + name + '\'' +
                ", age=" + age +
                ", sex='" + sex + '\'' +
                ", sportyStatus=" + sportyStatus;
    }

    /**
     * метод возвращает кол-во энергии участника, в зависимости от признаков самого участника
     * @return - кол-во энергии, которое фактически есть у участника
     */
    private int powerAbility () {
        double coefPopravki = 1;

        // поправка на возраст
        if (this.age <= 17) {
            coefPopravki *= 0.35;
        } else if (this.age >17 && this.age <= 28) {
            coefPopravki *= 1;
        } else if (this.age >28 && this.age <= 40) {
            coefPopravki *= 0.8;
        } else if (this.age >40 && this.age <= 60) {
            coefPopravki *= 0.6;
        } else if (this.age >60 && this.age <= 75) {
            coefPopravki *= 0.45;
        } else {
            coefPopravki *= 0.1;
        }


        // поправка на гендер
        if (this.sex == "Male" || this.sex == "M") {
            coefPopravki *= 1;
        } else {
            coefPopravki *= 0.85;
        }


        // поправка на физ. подготовку
        if (this.sportyStatus) {
            coefPopravki *= 1.2;
        } else {
            coefPopravki *= 0.85;
        }


        return (int) (DEFAULT_FULL_POWER * coefPopravki);
    }

    /**
     * метод проверяет пройдет ли дистанцию участник и возвращает true/false
     * @param course - дистанция с препятствиями, которую надо пройти
     */
    public boolean isCourseDone (int curCoursePower) {
        if (this.powerAbility() >= curCoursePower) {
            //System.out.print(this.powerAbility() + " " + curCoursePower + "   ");
            return true;
        } else {
            //System.out.print(this.powerAbility() + " " + curCoursePower + "  ");
            return false;
        }
    }

}
