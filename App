import java.util.ArrayList;
import java.util.List;

public class App {

    public static void main(String[] args) {

        // добавляем участников
        Participants participant1 = new Participants("NIKOLAY B.", 32, "M", false);
        Participants participant2 = new Participants("ALEKSEY N.", 18, "M", false);
        Participants participant3 = new Participants("ANNA F.", 27, "F", true);
        Participants participant4 = new Participants("SERGEY A.", 37, "M", true);

        // параметры некоего курса (сложность препятствий генерим рандомно)
        int [] course = new int [] {
                (int)( Math.random()*40),
                (int)( Math.random()*20),
                (int)( Math.random()*35),
                (int)( Math.random()*45),
                (int)( Math.random()*25),
        };


        Course curCourse = new Course (course);
        Team curTeam = new Team("HISHNIKI", participant1, participant2, participant3, participant4);

        // описание всех участников команды
        System.out.println(curTeam.toStringAllTeam());
        System.out.println();

        // метод, чтобы вся команда прошла дистанцию
        curCourse.dolt(curTeam);

        // метод для вывода тех, кто прошел дистанцию успешно
        curTeam.printWinners(curCourse.dolt(curTeam));

    }
}
